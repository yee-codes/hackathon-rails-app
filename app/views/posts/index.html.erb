<h1>Post Listing</h1>

<% if user_signed_in? %>
  <span class="navbar"><%= link_to 'Create a new post', new_post_path %></span>
<% end %>

<table>
  <tr>
    <th>Title</th>
    <th>Created by</th>
    <th></th>
  </tr>
 
  <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= User.find(post.user_id).username %></td>
      <td><%= link_to 'Show', post_path(post) %></td>
    </tr>
  <% end %>
</table>
<%= link_to 'Back', blog_index_path %>